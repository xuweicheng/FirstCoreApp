@page "{id}"
@model FirstCoreApp.Pages.Restaurants.EditModel

@{
    ViewBag.Title = "Edit" + Model.Restaurant.Name;
}

<h4>Edit @Model.Restaurant.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="@Model.Restaurant.Id" />
            <div class="form-group">
                <label asp-for="@Model.Restaurant.Name" class="control-label"></label>
                <input asp-for="@Model.Restaurant.Name" class="form-control" />
                <span asp-validation-for="@Model.Restaurant.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Restaurant.Cuisine"></label>
                <select asp-for="@Model.Restaurant.Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()"></select>
                <span asp-validation-for="@Model.Restaurant.Cuisine"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>